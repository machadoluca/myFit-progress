generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Treiners {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  CPF       String   @unique
  createdAt DateTime @default(now())

  clients Clients[]
}

model Clients {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  schedules Schedules[]

  treiner   Treiners? @relation(fields: [treinerId], references: [id])
  treinerId String?
}

model Schedules {
  id       String   @id @default(uuid())
  weekDay  String
  editedAt DateTime @default(now())

  workout Exercises[]

  client   Clients @relation(fields: [clientId], references: [id])
  clientId String
}

model Exercises {
  id            String  @id @default(uuid())
  name          String
  muscularGroup String
  description   String
  intensity     String
  videoUrl      String?

  schedule Schedules[]
}
